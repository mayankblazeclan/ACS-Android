<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_id"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtScreenId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC (123)"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_dob"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/06/1990"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout312"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_day134"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GROUP"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text=" G1"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout312"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_gender"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="MALE"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>



