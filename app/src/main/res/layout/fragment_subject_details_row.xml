    <LinearLayout
        android:id="@+id/linearLayout321"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_day123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/study_id"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtStudyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="10012"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout321"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/activity_5dp_margin"
        android:layout_marginBottom="@dimen/activity_5dp_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/study_status_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_status"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="ACTIVE"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/bt_ok_padding"
        android:layout_marginRight="@dimen/bt_ok_padding"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_5dp_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MODIFY"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBCRed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_5dp_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DELETE"/>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_5dp_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MAP"/>

    </LinearLayout>


